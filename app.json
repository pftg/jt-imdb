{
  "name": "APP NAME",
  "scripts": {
    "postdeploy": "bin/heroku-postdeploy"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "DB_SEED_ON_DEPLOY": "true",
    "BUNDLE_WITHOUT": "development:test:production",
    "MAILTRAP_ADDRESS": {
      "required": true
    },
    "MAILTRAP_API_TOKEN": {
      "required": true
    },
    "MAILTRAP_CATCH_MAIL": {
      "required": true
    },
    "MAILTRAP_DOMAIN": {
      "required": true
    },
    "MAILTRAP_PASSWORD": {
      "required": true
    },
    "MAILTRAP_PORT": {
      "required": true
    },
    "MAILTRAP_USER_NAME": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": "enabled",
    "RAILS_MASTER_KEY": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": "enabled",
    "REDIS_PROVIDER": "REDISTOGO_URL",
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "ROLLBAR_ENDPOINT": {
      "required": true
    },
    "ROLLBAR_ENV": "development"
  },
  "addons": [
    "mailtrap:unpaid",
    "memcachier:dev",
    "papertrail:choklad",
    "heroku-postgresql:hobby-dev",
    "redistogo:nano"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-activestorage-preview"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "stack": "heroku-18"
}
